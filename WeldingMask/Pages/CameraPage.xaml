<?xml version="1.0" encoding="UTF-8"?>
<base:BasePage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:WeldingMask.Pages.Base;assembly=WeldingMask"
    xmlns:rend="clr-namespace:WeldingMask.Renderers;assembly=WeldingMask"
    x:Class="WeldingMask.Pages.CameraPage">
	<AbsoluteLayout x:Name="container" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <rend:CameraView  AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" />
        <BoxView x:Name="filter" Color="Blue" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" BindingContext="{x:Reference Name=slider}" Opacity="{Binding Path=Value}" >
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ScreenTap}" >
                </TapGestureRecognizer>
            </BoxView.GestureRecognizers>
        </BoxView>     
        <Slider x:Name="slider" Value="{Binding FilterOpacity}" Maximum="0.7" Minimum="0" HorizontalOptions="FillAndExpand" VerticalOptions="End" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0.95,0.9,0.2" />
    </AbsoluteLayout>
</base:BasePage>
